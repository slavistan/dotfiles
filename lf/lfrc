%{{
if [ -z "$LF_TEMPDIR" ] || [ -z "$LF_FIFO_UEBERZUG" ]; then
	lf -remote "send $id \$echo 'Did you run lf instead of lf-run?'"
	lf -remote "send $id quit"
fi
}}

set ratios 1:3
set nodrawbox
set scrolloff 3
set icons
set truncatechar 'â‹¯'
set timefmt '_2. Dec 2006 15:04'
set promptfmt "\033[1;38;5;138m[ lf ] \033[1;38;5;159m%u@%h \033[38;5;15min \033[38;5;154m%w\033[0m"
set previewer lf-previewer
set cleaner lf-cleaner

map q quitcd
map <esc> quit
map <enter> openswallow

cmd quitcd ${{
	echo "1" > "$LF_TEMPDIR"/cdtolastdir
	lf -remote "send $id quit"
}}

cmd openswallow %{{
	lf-open.sh "$f"
}}

