mod4 + d
  dmenu_run -p "Run:"

mod4 + o
  kill -SIGUSR1 $(pgrep sxhkd); $DOTFILES/scripts/dwm-status.sh -- reloadrunning; notify-send "Reloaded sxhkd"

mod4 + Return
  $TERMINAL -e sh -c "cd $(xcwd); exec zsh"

shift + mod4 + F12
  $DOTFILES/scripts/xkbsel.sh

ctrl + shift + mod4 + q
  $DOTFILES/scripts/dwm-logout.sh

ctrl + shift + mod4 + l
  dm-tool lock

mod4 + n
  $DOTFILES/scripts/snapshot.sh --select-area

mod4 + e
  spacefm

mod4 + F12
  $DOTFILES/scripts/webcam.sh view toggle

mod4 + F11
  dunstctl context

mod4 + Escape
  dunstctl close

mod4 + shift + Escape
  dunstctl close-all
