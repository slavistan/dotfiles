# Run an application
mod4 + d
	dmenu_run -p "Run:"

# Spawn new terminal
mod4 + Return
	termcwd

mod4 + ctrl + Return
	zshxi <<<lf

mod4 + m
	rofimoji -f ~/prj/dotfiles/rofimoji/obsidian.csv

mod4 + shift + m
	rofimoji

# Choose keyboard layout
shift + mod4 + F12
	selxkbmap

# Exit dwm
ctrl + shift + mod4 + q
	dwmquit

# Take a snapshot
mod4 + n
	snapchad --select-area

# Close active notification
mod4 + Escape
	dunstctl close

# Obsidian Quick Action
mod4 + o
	obsidian-cli

mod4 + F5
	pkill -SIGUSR1 sxhkd
