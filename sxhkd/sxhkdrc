# Run an application
mod4 + d
	dmenu_run -p "Run:"

# Spawn new terminal
mod4 + Return
	termcwd

# Choose keyboard layout
shift + mod4 + F12
	selxkbmap

# Exit dwm
ctrl + shift + mod4 + q
	dwmquit

# Take a snapshot
mod4 + n
	snapchad --select-area

# Close active notification
mod4 + Escape
	dunstctl close
