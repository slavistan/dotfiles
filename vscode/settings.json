{
  "files.exclude": {
    "**/.git": false,
    "**/.svm": false,
    "**/.hg": false,
    "**/CVS": false,
    "**/.DS_Store": false,
    "**/Thumbs.db": false
  },
  "keyboard.dispatch": "keyCode",
  "workbench.colorTheme": "Monokai",
  "extensions.ignoreRecommendations": true,

  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.occurrencesHighlight": false,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "comments": "off",
    "strings": "off",
    "other": "off"
  },
  "editor.suggestOnTriggerCharacters": false,
  "editor.parameterHints.enabled": false,
  "editor.renderWhitespace": "boundary",
  "editor.scrollBeyondLastLine": false,
  "editor.snippetSuggestions": "none",
  "editor.guides.indentation": false,
  "explorer.confirmDragAndDrop": false,
  "breadcrumbs.enabled": false,

  "debug.onTaskErrors": "showErrors",
  "debug.saveBeforeStart": "none",
  "terminal.integrated.commandsToSkipShell": [
    /* Pass ctrl+p to shell. By default, this would open the command prompt. */
    "-workbench.action.quickOpen",

    /* Enable hotkeys for debug configurations while in terminal. */
    "launches.PythonAttachDebuggerLocalhost5678"
  ],
  "terminal.integrated.shellIntegration.enabled": false,
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDelete": false,
  "window.titleBarStyle": "custom",

  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.linux": "/home/stan/prj/dotfiles/nvim/init.vim",

  "C_Cpp.default.intelliSenseMode": "clang-x64",
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.default.cStandard": "c11",

  "go.useLanguageServer": true,

  "javascript.suggest.names": false,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.fontFamily": "'DroidSansMono Nerd Font Mono', 'monospace', monospace",
  "jupyter.askForKernelRestart": false,
  "notebook.lineNumbers": "on",
  "jupyter.pylanceHandlesNotebooks": true,
  "debug.javascript.autoAttachFilter": "disabled",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "right"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
    "log": "plaintext"
  },
  "editor.unicodeHighlight.ambiguousCharacters": false,

  /* Extension ArturoDent.launch-config */
  "launches": {
    "PythonAttachDebuggerLocalhost5678": "Python: Attach Debugger to localhost:5678"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.localEchoEnabled": "off",
  "terminal.integrated.persistentSessionReviveProcess": "never"
}
