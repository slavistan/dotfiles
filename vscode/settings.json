{
  /* Show files and directories hidden by vscode's dumb default settings. */
  "files.exclude": {
    "**/.git": false,
    "**/.svm": false,
    "**/.hg": false,
    "**/CVS": false,
    "**/.DS_Store": false,
    "**/Thumbs.db": false
  },

  /* Use the system's keyboard layout. Necessary for custom layouts. */
  "keyboard.dispatch": "keyCode",

  "extensions.ignoreRecommendations": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoClosingDelete": "never",
  "editor.autoSurround": "never",
  "editor.occurrencesHighlight": false,
  "html.autoClosingTags": false,
  "javascript.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "editor.inlayHints.enabled": "off",
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "comments": "off",
    "strings": "off",
    "other": "off"
  },
  "editor.wordBasedSuggestions": false,
  "editor.suggestOnTriggerCharacters": false,
  "editor.parameterHints.enabled": false,
  "editor.renderWhitespace": "boundary",
  "editor.scrollBeyondLastLine": false,
  "editor.snippetSuggestions": "none",
  "editor.guides.indentation": false,
  "editor.formatOnSave": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,

  "debug.onTaskErrors": "showErrors",
  "debug.saveBeforeStart": "none",
  "terminal.integrated.commandsToSkipShell": [
    /* Pass ctrl+p to shell. By default, this would open the command prompt. */
    "-workbench.action.quickOpen",

    /* Enable hotkeys for debug configurations while in terminal. */
    "launches.PythonAttachDebuggerLocalhost5678"
  ],
  "terminal.integrated.shellIntegration.enabled": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.indent": 18,
  "workbench.tree.renderIndentGuides": "always",
  "explorer.confirmDelete": false,
  "window.titleBarStyle": "custom",

  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.linux": "/home/stan/prj/dotfiles/nvim/init.vim",

  "go.useLanguageServer": true,
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    }
  },

  "javascript.suggest.names": false,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.fontFamily": "'DroidSansMono Nerd Font Mono', 'monospace', monospace",
  "jupyter.askForKernelRestart": false,
  "notebook.lineNumbers": "on",
  "debug.javascript.autoAttachFilter": "disabled",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "right"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
    "log": "plaintext"
  },
  "editor.unicodeHighlight.ambiguousCharacters": false,

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.localEchoEnabled": "off",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "git.openRepositoryInParentFolders": "never",
  "[python]": {
    "editor.formatOnType": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.largeFileOptimizations": false,
  "redhat.telemetry.enabled": false,
  "xml.server.vmargs": "-Xmx5G",
  "editor.unicodeHighlight.invisibleCharacters": true,
  "notebook.output.textLineLimit": 128,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  "todo-tree.regex.regex": "(?:(?://|#|<!--|;|/\\*\\*?|\\*)\\s*($TAGS)|^\\s*- \\[ \\])",
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "???",
    "[ ]",
    "[x]"
  ],
  "typescript.preferences.importModuleSpecifier": "relative",
  "explorer.autoReveal": false
}
